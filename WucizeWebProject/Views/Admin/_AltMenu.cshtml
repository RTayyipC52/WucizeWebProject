@using Entities.Concrete
@model List<Product>
<!-- Alt Menüler burada listeleniyor -->


<div class="modal fade" id="#subMenu" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <section class="contact-form">
                <form id="form-edit-contact" class="contact-input">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Kategoriler</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <div class="text-right">
                            <button type="button" class="btn btn-primary btn-sm mr-1 mb-3" data-toggle="modal" data-target="#addSubMenu ">
                                <i class="d-md-none d-block ft-plus white"></i>
                                <span class="d-md-flex d-none align-items-center"><i class="ft-plus white" style="font-size: 1.5rem; "></i> Menü Ekle </span>
                            </button>
                        </div>
                        <div class="table-responsive">
                            <table id="example" class="table table-white-space table-bordered row-grouping display no-wrap icheck table-middle text-center" style="width:100%">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Menü Adı</th>
                                        <th>İçerik Türü</th>
                                        <th>Sıra</th>
                                        <th>Durum</th>
                                        <th>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="text-center">
                                                <span>@item.ProductName</span>
                                            </td>
                                            <td class="text-left">
                                                <div class="media">

                                                    <div class="media-body media-middle">
                                                        <a class="media-heading name">@item.ProductName</a>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="text-center">
                                                <a class="fullname">@item.ProductName</a>
                                            </td>
                                            <td class="text-center">
                                                <a class=" fullname">@item.ProductName</a>
                                            </td>
                                            <td class="text-center">
                                                <span>@item.ProductName</span>
                                            </td>

                                            <td class="text-right">
                                                <a data-toggle="modal" data-target="#editSubMenu" class="btn btn-icon btn-info text-white edit"><i class="la la-pencil"></i></a>
                                                <a class="btn btn-icon btn-danger text-white delete "><i class="la la-trash-o"></i></a>


                                                <span class="dropdown">
                                                    <a id="btnSearchDrop2" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" class="btn btn-secondary dropdown-toggle dropdown-menu-right"></a>
                                                    <span aria-labelledby="btnSearchDrop2" class="dropdown-menu mt-1 dropdown-menu-right">
                                                        <a data-toggle="modal" data-target="#editSubMenu" class="dropdown-item edit">
                                                            <i class="ft-edit-2"></i>
                                                            Edit
                                                        </a>
                                                        <a href="#" class="dropdown-item delete"><i class="ft-trash-2"></i> Delete</a>

                                                    </span>
                                                </span>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <div class="form-group position-relative has-icon-left mb-0">
                            <button type="button" class="btn btn-primary"><i class="la la-paper-plane-o d-lg-none"></i> <span class="d-none d-lg-block">Kaydet</span></button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>

<!-- Alt Menüler burada listeleniyor -->