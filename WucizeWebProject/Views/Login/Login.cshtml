@model UserSignInViewModel
@{
    ViewData["Title"] = "Login";
    Layout = null;
    //"~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html class="loading" lang="en" data-textdirection="ltr">
<!-- BEGIN: Head-->

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta name="author" content="Wucize">
    <title>Wucize</title>
    <link rel="apple-touch-icon" href="~/teknik-mulakat/AdminPanel/assets/images/logo-w.svg" />
    <link rel="shortcut icon" type="image/x-icon" href="~/teknik-mulakat/AdminPanel/assets/images/logo-w.svg" />
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i%7CQuicksand:300,400,500,700" rel="stylesheet">

    <!-- BEGIN: Vendor CSS-->
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/vendors/css/vendors.min.css">
    <!-- END: Vendor CSS-->
    <!-- BEGIN: Theme CSS-->
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/css/bootstrap-extended.css">
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/css/colors.css">
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/css/components.css">
    <!-- END: Theme CSS-->
    <!-- BEGIN: Page CSS-->
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/css/core/menu/menu-types/vertical-menu-modern.css">
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/app-assets/css/core/colors/palette-gradient.css">
    <!-- END: Page CSS-->
    <!-- BEGIN: Custom CSS-->
    <link rel="stylesheet" type="text/css" href="~/teknik-mulakat/AdminPanel/assets/scss/style.css" />
    <!-- END: Custom CSS-->

</head>
<!-- END: Head-->
<!-- BEGIN: Body-->

<body class="vertical-layout vertical-menu-modern 1-column   blank-page" data-open="click" data-menu="vertical-menu-modern" data-col="1-column">
    <!-- BEGIN: Header-->

    <nav class="header-navbar navbar-expand-lg navbar navbar-with-menu navbar-without-dd-arrow fixed-top navbar-semi-dark navbar-shadow">

        <div class="navbar-wrapper">

            <div class="navbar-container content d-flex justify-content-center align-items-center">
                <div class="w-panel d-flex align-items-center justify-content-center">
                    <img src="~/teknik-mulakat/AdminPanel/assets/images/logo-w.svg" class="w-panel-logo" alt=""> <span>Panel</span>
                </div>

            </div>
        </div>
    </nav>
    <!-- END: Header-->
    <!-- BEGIN: Content-->
    <div class="app-content content">
        <div class="content-overlay"></div>
        <div class="content-wrapper">
            <div class="content-header row">
            </div>
            <div class="content-body">
                <section class="row flexbox-container">
                    <div class="col-12 d-flex align-items-center justify-content-center">
                        <div class="col-lg-3 col-md-6 col-10 box-shadow-2 p-0">
                            <div class="card border-grey border-lighten-3 px-1 py-1 m-0">
                                <div class="card-header border-0">
                                    <div class="card-title text-center">
                                        <img class="w-50" src="~/teknik-mulakat/AdminPanel/assets/images/main-logo.png">
                                    </div>
                                </div>
                                <div class="card-content">
                                    <div class="card-body">
                                        <form class="form-horizontal" asp-action="Login" method="post" novalidate="">
                                            <fieldset class="form-group position-relative has-icon-left">
                                                <input type="text" asp-for="@Model.UserName" class="form-control" id="UserName" name="UserName" placeholder="Kullanıcı Adınızı Giriniz" required="">
                                                <div class="form-control-position">
                                                    <i class="la la-user"></i>
                                                </div>
                                            </fieldset>
                                            <fieldset class="form-group position-relative has-icon-left validate">
                                                <input type="password" asp-for="@Model.Password" class="form-control" id="Password" name="Password" placeholder="Şifrenizi Giriniz" required="" aria-invalid="false">
                                                <div class="form-control-position">
                                                    <i class="la la-key"></i>
                                                </div>
                                            </fieldset>
                                            <button type="submit" class="btn btn-outline-info btn-block"><i class="ft-unlock"></i> Giriş</button>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>

            </div>
        </div>
    </div>
    <!-- END: Content-->
    <!-- BEGIN: Vendor JS-->
    <script src="~/teknik-mulakat/AdminPanel/app-assets/vendors/js/vendors.min.js"></script>
    <!-- BEGIN Vendor JS-->
    <!-- BEGIN: Page Vendor JS-->
    <script src="~/teknik-mulakat/AdminPanel/app-assets/vendors/js/forms/icheck/icheck.min.js"></script>
    <script src="~/teknik-mulakat/AdminPanel/app-assets/vendors/js/forms/validation/jqBootstrapValidation.js"></script>
    <!-- END: Page Vendor JS-->
    <!-- BEGIN: Theme JS-->
    <script src="~/teknik-mulakat/AdminPanel/app-assets/js/core/app-menu.js"></script>
    <script src="~/teknik-mulakat/AdminPanel/app-assets/js/core/app.js"></script>
    <!-- END: Theme JS-->
    <!-- BEGIN: Page JS-->
    <script src="~/teknik-mulakat/AdminPanel/app-assets/js/scripts/forms/form-login-register.js"></script>
    <!-- END: Page JS-->

</body>
<!-- END: Body-->

</html>

