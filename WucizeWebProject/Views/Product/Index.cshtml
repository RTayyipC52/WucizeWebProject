    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.2.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper/swiper-bundle.min.css" />
    <link rel="stylesheet" href="~/teknik-mulakat/Tasarım/css/style.css">
    <title>SEASHA</title>
</head>

<body>
    <header class="header d-flex flex-column justify-content-center align-items-center">
        <div class="container-fluid">
            <form class="navbar-form" role="search" asp-controller="Product" asp-action="Index" method="post">
                <div class="input-group add-on">
                    <input class="form-control" placeholder="Search For Products" name="a" id="a" type="text">
                    <div class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
                    </div>
                </div>
            </form>
            <div class="menu-list-area">
                <div class="row">
                    @foreach(var item in Model) {
                        <div class="col-7 col-lg-2 col-md-4 text-center">
                            <a>@item.Category.CategoryName</a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </header>
        
    
    @foreach (var item in Model)
    {                                  
        <section class="category-menu">
            <div class="category-title-area d-flex justify-content-start align-items-center">
                <h2>
                @item.Category.CategoryName
                </h2>
            </div>
            <div class="category-list">
                <div class="row">
                    <div class="col-lg-4 col-md-6 col-6">
                        <div class="item d-flex justify-content-start align-items-start flex-column mb-4" data-bs-toggle="modal" data-bs-target="@("#DetailModal-" + item.ProductId)" data-url="@Url.Action($"ProductDetail/{item.ProductId}")">
                            <div class="img-wrapper">
                                <img src="https://localhost:7295/teknik-mulakat/Tasar%C4%B1m/img/@item.ProductImage" class="img-fluid" alt="">
                            </div>
                            <div class="detail">
                                <h5>@item.ProductName</h5>
                                <span class="price">@item.ProductDescription</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            @await Html.PartialAsync("_ProductDetail.cshtml",item)
        </section>
    }
    
