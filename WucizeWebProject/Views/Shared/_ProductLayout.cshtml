<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WucizeWebProject</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WucizeWebProject.styles.css" asp-append-version="true" />
</head>
<body>
    <header class="header d-flex justify-content-center align-items-center">
        <div class="container-fluid">
            <nav class="navbar">
                <div class="social-media d-flex align-items-center justify-content-center">
                    <a href=""><i class="fa-brands fa-facebook-f"></i></a>
                    <a href=""><i class="fa-brands fa-instagram"></i></a>
                    <a href=""><i class="fa-brands fa-twitter"></i></a>
                </div>
                <a class="navbar-brand" href="#">
                    <img src="~/teknik-mulakat/Tasarım/img/logo.svg" alt="header logo">
                </a>
                <div class="d-lg-block d-none">
                    <ul class="ml-5 d-flex list-unstyled  language">
                        <li><a href="/Product/IndexTr" class="btn" data-language="pt">Türkçe</a></li>
                        <li><a href="/Product/Index" class="btn" data-language="en">İngilizce</a></li>
                    </ul>
                </div>
                @*<div class="dropdown">
                    <button class="btn" type="button" id="dropdownMenu2" data-bs-toggle="dropdown" aria-expanded="false">
                        TR <i class="fa-solid fa-chevron-down"></i>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li><button href="/Product/IndexTr" class="dropdown-item" type="button">TR</button></li>
                        <li><button href="/Product/Index" class="dropdown-item" type="button">EN</button></li>
                    </ul>
                </div>*@
            </nav>
        </div>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>

    <footer>
        <div class="top-footer w-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <div class="content">
                            <a class="menu" href="index.html">Menu</a>

                            <ul class="address">
                                <li>
                                    Şenlikköy, Yeşilköy Halkalı Cad. No: 93/1
                                    No:16 Kat:4 <br> 34153 Bakırköy / İstanbul
                                </li>
                                <!-- <li><a href="">info@seasha.com</a></li> -->
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="footer-bottom w-100">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <a href="https://www.wucize.com/">
                            <img src="~/teknik-mulakat/Tasarım/img/wucize-logo.svg" alt="wucize logo">
                        </a>
                    </div>

                    <div class="col-md-12">
                        <p class="copyright-text">Copyright Wucize Yazılım Teknolojileri &copy; 1.0.0 </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
